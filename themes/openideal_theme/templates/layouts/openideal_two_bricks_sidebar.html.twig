{#
/**
 * @file
 * Default theme implementation to display a two-bricks and sidebar layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div{{ attributes.addClass('row') }}>

    <div class="col-lg-8">
        {% if content.square_one %}
            <section {{ region_attributes.square_one.addClass('layout__region--first') }}>
                {{ content.square_one }}
            </section>
        {% endif %}

        {% if content.square_two %}
            <section {{ region_attributes.square_two.addClass('layout__region--second') }}>
                {{ content.square_two }}
            </section>
        {% endif %}
    </div>

    <div class="col-lg-4">
        {% if content.side_bar %}
            <section {{ region_attributes.second.addClass('layout__region--sidebar') }}>
                {{ content.side_bar }}
            </section>
        {% endif %}
    </div>

  </div>
{% endif %}
